<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/orange_colorPrimary</item>
        <item name="colorPrimaryDark">@color/orange_colorPrimaryDark</item>
        <item name="colorAccent">@color/orange_alpha_colorPrimaryDark</item>
        <item name="android:textColor">@color/orange_alpha_colorPrimaryDark</item>
        <item name="android:textColorHint">@color/orange_alpha_colorPrimaryDark</item>
        <item name="colorControlNormal">@color/orange_alpha_colorPrimaryDark</item>
        <item name="colorControlActivated">@color/orange_alpha_colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/ripple_material_light</item>

        <item name="popupMenuStyle">@style/popUpMenu</item>


    </style>



    <!--Here will be the theme of the class that will extends NavigationLiveo-->

    <style name="nLiveoDrawer" parent="nLiveo.Theme.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_colorPrimary</item>
        <item name="colorPrimaryDark">@color/orange_colorPrimaryDark</item>
        <item name="colorAccent">@color/orange_alpha_colorPrimaryDark</item>
        <item name="android:textColor">@color/orange_alpha_colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/orange_alpha_colorPrimaryDark</item>

        <item name="android:popupMenuStyle">@style/popUpMenu</item>

    </style>

    <style name="popUpMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
